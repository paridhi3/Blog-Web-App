<%- include("partials/header.ejs") %>

<main class="common">
    <h1>Edit Post</h1>

    <form action="/edit/<%= index %>" method="POST">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input name="postTitle" type="text" value="<%= post.title %>" class="form-control">
        </div>
        <div class="mb-3">
          <label class="form-label">Body</label>
          <textarea name="postBody" type="text" class="form-control" rows="5"><%= post.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
      
      
</main>

<%- include("partials/footer.ejs") %>